pipeline {
    agent none

    stages {
        stage("Build-Backend") {
            agent {
                docker {
                    image 'snakee/golang-junit:1.20'
                    reuseNode true
                }
            }
            steps {
                dir('backend') {
                    sh 'go test -v ./...'
                }
            }
        }

        stage("Test-Frontend") {
            agent {
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('frontend') {
                    sh '''
                        npm ci
                        npm test
                    '''
                }
            }
        }

        // stage("Deploy") {
        //     agent any
        //     steps {
        //         echo "Deploying the application"
        //     }
        // }
    }
}
