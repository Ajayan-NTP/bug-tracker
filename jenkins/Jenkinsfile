pipeline {
    agent none

    stages {
         stage("Build-Backend") {
            steps {
                bat '''
                    docker pull golang:1.21
                    docker run --rm -v %cd%:/app -w /app/backend golang:1.21 sh -c "go test -v ./..."
                '''
            }
        }
        stage("Test-Frontend") {
            agent {
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('frontend') {
                    sh '''
                        npm ci
                        npm test
                    '''
                }
            }
        }

        // stage("Deploy") {
        //     agent any
        //     steps {
        //         echo "Deploying the application"
        //     }
        // }
    }
}
