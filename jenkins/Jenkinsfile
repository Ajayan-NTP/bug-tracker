pipeline {
    agent none

    stages {
        stage("Build-Backend") {
            agent any
            steps {
                bat '''
                    docker pull golang:1.21
                    docker run --rm -v %cd%:/app -w /app/backend golang:1.21 sh -c "go test -v ./..."
                '''
            }
        }

        stage("Test-Frontend") {
            agent any
            steps {
                bat '''
                    docker pull node:20-alpine
                    docker run --rm -v %cd%:/app -w /app/frontend node:20-alpine sh -c "npm ci && npm test"
                '''
            }
        }
    }
}
