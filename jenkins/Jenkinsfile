pipeline {
    agent any

    stages {
        stage('w/o docker') {
            steps {
                sh 'echo "Without docker"'
                sh 'touch container-no.txt'
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'golang:1.21-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-backend') {
                    sh '''
                        export GOCACHE="$PWD/.cache"
                        mkdir -p "$GOCACHE"
                        go build -o bugtracker-backend cmd/bugtracker/main.go
                        ls -la
                    '''
                }
            }
        }

        stage ('Test') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.22' // using custom image with junit installed
                    reuseNode true
                }
            }
            
            steps {
                dir('bugtracker-backend') {
                    sh '''
                        # Debug information
                        echo "Current user:"
                        id
                        
                        echo "Permissions of key directories:"
                        ls -la /go
                        ls -la /go/pkg
                        ls -la /go/pkg/mod
                        
                        echo "Go environment:"
                        go env
                        
                        echo "Current directory structure:"
                        pwd
                        ls -la
                        
                        # Original test commands
                        echo "Running tests..."
                        go test -v ./... 2>&1 | go-junit-report -set-exit-code > report.xml
                                                
                        # Generate coverage report
                        go test -coverprofile=coverage.out -covermode=atomic ./...
                        go tool cover -html=coverage.out -o coverage.html
                    '''
                }
            }
            post {
                always {
                    junit 'bugtracker-backend/report.xml'
                    publishHTML target: [
                        allowMissing: true, 
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'bugtracker-backend',
                        reportFiles: 'coverage.html',
                        reportName: 'Coverage Report'
                    ]
                }
            }
        }
    }
}
