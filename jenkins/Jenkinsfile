pipeline {
    agent any

    stages {
        stage('w/o docker') {
            steps {
                sh 'echo "Without docker"'
                sh 'touch container-no.txt'
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'golang:1.21-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-backend') {
                    sh '''
                        export GOCACHE="$PWD/.cache"
                        mkdir -p "$GOCACHE"
                        go build -o bugtracker-backend cmd/bugtracker/main.go
                        ls -la
                    '''
                }
            }
        }

        stage ('Test') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21' // using custom image with junit installed
                    reuseNode true
                }
            }
            
            steps {
                dir('bugtracker-backend') {
                    sh '''
                        # Verify environment
                        echo "GOMODCACHE: $GOMODCACHE"
                        go env GOMODCACHE
                        ls -ld $GOMODCACHE

                        # Run tests with JUnit XML output
                        go test -v ./... 2>&1 | go-junit-report -set-exit-code > report.xml
                                                
                        # Generate coverage report
                        go test -coverprofile=coverage.out -covermode=atomic ./...
                        go tool cover -html=coverage.out -o coverage.html
                    '''
                }
            }
            post {
                always {
                    junit 'bugtracker-backend/report.xml'
                    publishHTML target: [
                        allowMissing: true, 
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'bugtracker-backend',
                        reportFiles: 'coverage.html',
                        reportName: 'Coverage Report'
                    ]
                    sh '''
                        echo "=== Docker Image List ==="
                        docker images
                        echo "=== Build Cache ==="
                        docker builder prune --dry-run --filter type=exec.cachemount
                    '''
                }
            }
        }
    }
}
