pipeline {
    agent any

    stages {
        stage('w/o docker') {
            steps {
                sh 'echo "Without docker"'
                sh 'touch container-no.txt'
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'golang:1.21-alpine'
                    reuseNode true
                    args '--entrypoint=""' // Needed for tool installation
                }
            }
            steps {
                dir('bugtracker-backend') {
                    sh '''
                        apk add --no-cache git
                        go install github.com/jstemmer/go-junit-report/v2@latest
                        export GOCACHE="$PWD/.cache"
                        mkdir -p "$GOCACHE"
                        go build -o bugtracker-backend cmd/bugtracker/main.go
                        ls -la
                    '''
                }
            }
        }

        stage ('Test') {
            agent {
                docker {
                    image 'golang:1.21-alpine'
                    reuseNode true
                }
            }
            
            steps {
                dir('bugtracker-backend') {
                    sh '''
                        export PATH="$PATH:/root/go/bin"
                        export GOCACHE="$PWD/.cache"

                        # Run tests with JUnit XML output
                        go test -v ./... 2>&1 | go-junit-report -set-exit-code > report.xml
                                                
                        # Generate coverage report
                        go test -coverprofile=coverage.out -covermode=atomic ./...
                        go tool cover -html=coverage.out -o coverage.html
                    '''
                }
            }
            post {
                always {
                    junit 'bugtracker-backend/report.xml'  // JUnit test reporting [1][5]
                    cobertura coberturaReportFile: 'bugtracker-backend/coverage.out'  // Coverage reporting [12]
                    archiveArtifacts artifacts: 'bugtracker-backend/coverage.html', allowEmptyArchive: true
                }
            }
        }
    }
}
